<Addin id          = "Jypeli"
       namespace   = "MonoDevelop"
       name        = "Jypeli"
       author      = "Jyvaskylan yliopisto"
       copyright   = "MIT"
       url         = "http://bit.ly/pelikurssi"
       description = "Jypeli game programming library"
       category    = "Jypeli"
       version     = "6.0.1">

       <Runtime>
          <Import file = "icons/Jypeli-32.png"/>
          <Import file = "icons/PerusPeli-16.png"/>
          <Import file = "icons/PerusPeli-32.png"/>
          <Import file = "templates/PerusPeli/Icon-md.png"/>
          <Import file = "templates/PerusPeli/Ohjelma.cs"/>
          <Import file = "templates/PerusPeli/Peli.cs"/>
          <Import file = "templates/PerusPeliCs.xft.xml"/>
          <Import file = "templates/PerusPeli.MacOS.xpt.xml"/>

          <Import file = "assemblies/WindowsGL/Jypeli.MonoGame.Framework.dll"/>
          <Import file = "assemblies/WindowsGL/Lidgren.Network.dll"/>
          <Import file = "assemblies/WindowsGL/OpenTK.dll"/>
          <Import file = "assemblies/WindowsGL/SDL.dll"/>
          <Import file = "assemblies/WindowsGL/smpeg.dll"/>
          <Import file = "assemblies/WindowsGL/Tao.Sdl.dll"/>
          <Import file = "assemblies/WindowsGL/Jypeli.dll"/>
          <Import file = "assemblies/WindowsGL/Jypeli.xml"/>
          <Import file = "assemblies/WindowsGL/Jypeli.Physics2d.dll"/>
          <Import file = "assemblies/WindowsGL/Jypeli.Physics2d.xml"/>
          <Import file = "assemblies/WindowsGL/Jypeli.SimplePhysics.dll"/>
          <Import file = "assemblies/WindowsGL/Jypeli.SimplePhysics.xml"/>
       </Runtime>

      <Dependencies>
         <Addin id="::MonoDevelop.Core" version="4.0"/>
         <Addin id="::MonoDevelop.Ide" version="4.0"/>
         <Addin id="::MonoDevelop.SourceEditor2" version="4.0"/>
         <Addin id="::MonoDevelop.Refactoring" version="4.0"/>
         <Addin id="::MonoDevelop.Autotools" version="4.0"/>
      </Dependencies>

      <Extension path="/MonoDevelop/Core/StockIcons">
         <StockIcon stockid="PerusPeli-project" file="icons/PerusPeli-32.png" />
      </Extension>

      <Extension path="/MonoDevelop/Ide/ProjectTemplates">
         <ProjectTemplate id   = "PerusPeli"
                          file = "templates/PerusPeli.xpt.xml"/>
      </Extension>

      <Extension path = "/MonoDevelop/Ide/FileTemplates">
         <FileTemplate id   = "PerusPeliCs"
                       file = "templates/PerusPeliCs.xft.xml"/>
      </Extension>
      
      <Extension path="/MonoDevelop/Ide/ProjectTemplates">
         <ProjectTemplate id   = "PerusPeli"
                          file = "templates/PerusPeli.Windows.xpt.xml"/>
      </Extension>

      <Extension path = "/MonoDevelop/Ide/FileTemplates">
         <FileTemplate id   = "PerusPeliCs"
                       file = "templates/PerusPeliCs.xft.xml"/>
      </Extension>

      <Extension path="/MonoDevelop/Core/SupportPackages">
         <Condition id="PackageNotInstalled" name="jypeli" version="6.0">
            <Package name="jypeli" version="6.0" clrVersion="Default">
               <Assembly file="assemblies/MacOS/Jypeli.dll" />
               <Assembly file="assemblies/MacOS/Jypeli.SimplePhysics.dll" />
               <Assembly file="assemblies/MacOS/Jypeli.Physics2d.dll" />
               <Assembly file="assemblies/MacOS/Jypeli.MonoGame.Framework.dll" />
               <Assembly file="assemblies/MacOS/Lidgren.Network.dll" />
           </Package>
         </Condition>
       </Extension>
</Addin>
