<?xml version="1.0"?>
<Template originator   = "Tomi Karppinen"
          created      = "2014/01/27"
          lastModified = "2014/02/09">

    <TemplateConfiguration>
		<_Name>PerusPeli</_Name>
		<_Category>C#/Jypeli</_Category>
		<Icon>PerusPeli-project</Icon>
		<LanguageName>C#</LanguageName>
		<_Description>Peli ilman fysiikkaa.</_Description>
	</TemplateConfiguration>

    <Actions>
       <Open filename = "Peli.cs"/>
    </Actions>

   <Options>
      <StartupProject>${ProjectName}</StartupProject>
   </Options>

    <Combine name = "${ProjectName}" directory = ".">
       <Project name = "${ProjectName}" directory = ".">
          <Options/>

          <References>
             <Reference type = "Package" refto = "Jypeli"/>
             <Reference type = "Package" refto = "Jypeli.MonoGame.Framework"/>
             <Reference type = "Gac" refto = "System" />
             <Reference type = "Gac" refto = "System.Xml" />
             <Reference type = "Gac" refto = "System.Core" />
             <Reference type = "Gac" refto = "OpenTK" />
             <Reference type = "Gac" refto = "Lidgren.Network" />
             <Reference type = "Gac" refto = "Tao.Sdl" />
          </References>

          <Files>
             <FileTemplateReference TemplateID="CSharpAssemblyInfo" name="AssemblyInfo.cs" />
             <File name="Peli.cs" src="PerusPeli/Peli.cs" />
             <File name="Ohjelma.cs" src="PerusPeli/Ohjelma.cs" />
             <RawFile name="Icon.png" src="PerusPeli/Icon-md.png" />
             <Directory name="Content" />
          </Files>
       </Project>
    </Combine>
</Template>

