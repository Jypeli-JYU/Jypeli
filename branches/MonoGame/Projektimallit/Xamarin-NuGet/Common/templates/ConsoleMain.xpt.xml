<?xml version="1.0"?>
<Template originator   = "Tomi Karppinen"
          created      = "2014/09/18"
          lastModified = "2016/10/04">

	<TemplateConfiguration>
		<_Name>ConsoleMain</_Name>
		<Category>jypeli/multiplatform/console</Category>
		<Icon>md-console-project</Icon>
		<Image id="md-console-project" />
		<LanguageName>C#</LanguageName>
		<_Description>Tyhjä Console Main -projekti, jossa kommenttien paikka valmiina.</_Description>
	</TemplateConfiguration>

	<Actions>
		<Open filename = "Ohjelma.cs" />
	</Actions>

	<Options>
		<StartupProject>${ProjectName}</StartupProject>
	</Options>

	<Combine name = "${ProjectName}" directory = ".">
		<Project name = "${ProjectName}" directory = ".">
			<Options/>

			<References>
				<Reference type = "Package" refto = "System" />
				<Reference type = "Package" refto = "System.Xml" />
				<Reference type = "Package" refto = "System.Core" />
			</References>

			<Files>
				<FileTemplateReference TemplateID="CSharpAssemblyInfo" name="AssemblyInfo.cs" />
				<File name="Ohjelma.cs" src="ConsoleMain/Program.cs" AddStandardHeader="true" />
			</Files>
		</Project>
	</Combine>
</Template>
