<?xml version="1.0"?>
<Template
		originator		= "Tomi Karppinen"
		created			= "2016/09/28"
		lastModified	= "2016/10/06">

	<TemplateConfiguration>
		<_Name>FysiikkaPeli (SimplePhysics)</_Name>
		<Category>jypeli/linux/fysiikka</Category>
		<Icon>FysiikkaPeli-project</Icon>
		<LanguageName>C#</LanguageName>
		<_Description>Fysiikkapeli Linuxille, joka käyttää yksinkertaista fysiikkaa. Physics game for Linux with SimplePhysics engine.</_Description>
	</TemplateConfiguration>

	<Options>
		<StartupProject>${ProjectName}</StartupProject>
	</Options>

	<Combine name="${ProjectName}" directory=".">
		<Project name="${ProjectName}" directory=".">
			<Options />

			<References>
				<Reference type = "Gac" refto = "System" />
				<Reference type = "Gac" refto = "System.Xml" />
				<Reference type = "Gac" refto = "System.Core" />
			</References>

			<Packages>
				<Package id = "Jypeli.Linux" />
				<Package id = "Jypeli.SimplePhysics.Linux" />
			</Packages>

			<Files>
				<FileTemplateReference TemplateID="CSharpAssemblyInfo" name="AssemblyInfo.cs" />
				<File name="${ProjectName}.cs" src="FysiikkaPeli/Peli.cs" />
				<File name="Ohjelma.cs" src="PerusPeli/Ohjelma.cs" />
				<RawFile name="Icon.png" src="FysiikkaPeli/Icon-md.png" />
				<RawFile name="OpenTK.dll.config" src="lib/OpenTK.dll.config" CopyToOutputDirectory="PreserveNewest" />
				<RawFile name="Tao.Sdl.dll.config" src="lib/Tao.Sdl.dll.config" CopyToOutputDirectory="PreserveNewest" />
				<Directory name="Content" />
			</Files>
		</Project>
	</Combine>
</Template>