<?xml version="1.0"?>
<Template
		originator		= "Tomi Karppinen"
		created			= "2016/10/12"
		lastModified	= "2016/10/12">

	<TemplateConfiguration>
		<_Name>FysiikkaPeli (Physics2d)</_Name>
		<Category>jypeli/windowsgl/fysiikka</Category>
		<Icon>FysiikkaPeli-project</Icon>
		<LanguageName>C#</LanguageName>
		<_Description>Fysiikkapeli Windowsille, joka käyttää Physics2d-fysiikkamoottoria. Physics game for Windows with Physics2d engine.</_Description>
	</TemplateConfiguration>

	<Options>
		<StartupProject>${ProjectName}</StartupProject>
	</Options>

	<Combine name = "${ProjectName}" directory = ".">
		<Project name = "${ProjectName}" directory = ".">
			<Options/>

			<References>
				<Reference type = "Gac" refto = "System" />
				<Reference type = "Gac" refto = "System.Xml" />
				<Reference type = "Gac" refto = "System.Core" />
			</References>

			<Packages>
				<Package id = "Jypeli.WindowsGL" />
				<Package id = "Jypeli.Physics2d.WindowsGL" />
			</Packages>

			<Files>
				<FileTemplateReference TemplateID="CSharpAssemblyInfo" name="AssemblyInfo.cs" />
				<File name="${ProjectName}.cs" src="FysiikkaPeli/Peli.cs" AddStandardHeader="True" />
				<File name="Ohjelma.cs" src="PerusPeli/Ohjelma.cs" AddStandardHeader="True" />
				<RawFile name="Icon.png" src="FysiikkaPeli/Icon-md.png" />
				<Directory name="Content" />
			</Files>
		</Project>
	</Combine>
</Template>
