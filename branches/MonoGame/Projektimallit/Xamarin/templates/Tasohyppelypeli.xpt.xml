<?xml version="1.0"?>
<Template originator   = "Tomi Karppinen"
          created      = "2014/03/07"
          lastModified = "2014/10/23">

    <TemplateConfiguration>
		<_Name>Tasohyppelypeli (Physics2d)</_Name>
		<_Category>C#/Jypeli</_Category>
		<Icon>Tasohyppelypeli-project</Icon>
		<LanguageName>C#</LanguageName>
		<_Description>Peli, jossa on valmiina tasohyppelyhahmo ja tasoja. Platform game template.</_Description>
	</TemplateConfiguration>

   <Options>
      <StartupProject>${ProjectName}</StartupProject>
   </Options>

    <Combine name = "${ProjectName}" directory = ".">
       <Project name = "${ProjectName}" directory = "." type="Jypeli">
          <Options/>

          <References>
             <Reference type = "Package" refto = "Jypeli"/>
             <Reference type = "Package" refto = "Jypeli.Physics2d"/>
             <Reference type = "Package" refto = "MonoGame.Framework"/>
             <Reference type = "Package" refto = "System" />
             <Reference type = "Package" refto = "System.Xml" />
             <Reference type = "Package" refto = "System.Core" />
             <Reference type = "Package" refto = "OpenTK" />
             <Reference type = "Package" refto = "Lidgren.Network" />
             <Reference type = "Package" refto = "Tao.Sdl" />
          </References>

          <Files>
             <FileTemplateReference TemplateID="CSharpAssemblyInfo" name="AssemblyInfo.cs" />
             <File name="${ProjectName}.cs" src="Tasohyppelypeli/Peli.cs" />
             <File name="Ohjelma.cs" src="PerusPeli/Ohjelma.cs" />
             <RawFile name="Icon.png" src="Tasohyppelypeli/Icon-md.png" />
             <Directory name="Content">
             	<RawFile name="kentta1.txt" src="Tasohyppelypeli/Content/kentta1.txt" BuildAction="Content" />
             	<RawFile name="norsu.png" src="Tasohyppelypeli/Content/norsu.png" BuildAction="Content" />
             	<RawFile name="tahti.png" src="Tasohyppelypeli/Content/tahti.png" BuildAction="Content" />
             	<RawFile name="maali.wav" src="Tasohyppelypeli/Content/maali.wav" BuildAction="Content" />
             </Directory>
          </Files>
       </Project>
    </Combine>
</Template>

